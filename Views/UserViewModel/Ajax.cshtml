
<!DOCTYPE html>
<html>
<head>
    <title>Cadastro Dinâmico - Tabela</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <h1>Usuários Cadastrados</h1>
    <div id="tableContainer"></div>

    <script>

        $.ajax({
            url: '/UserViewModel/Ajax',  
            type: 'GET',
            success: function (data) {
             
                data = [
                    { Id: 1, FirstName: "Gabryel", LastName: "Velli", Email: "gabryel@gmail.com", BirthDate: "2000-01-01" },
                    { Id: 2, FirstName: "Maria", LastName: "Silva", Email: "maria@gmail.com", BirthDate: "1995-05-15" }
                ];

                var table = "<table border='1' style='width:100%; margin-top: 20px;'><tr><th>ID</th><th>Nome</th><th>Sobrenome</th><th>Email</th><th>Data de Nascimento</th></tr>";

                for (var i = 0; i < data.length; i++) {
                    table += "<tr><td>" + data[i].Id + "</td><td>" + data[i].FirstName + "</td><td>" + data[i].LastName + "</td><td>" + data[i].Email + "</td><td>" + data[i].BirthDate + "</td></tr>";
                }

                table += "</table>";


                $('#tableContainer').html(table);
            },
            error: function (xhr, status, error) {
                console.error("Erro ao carregar os dados:", error);
                alert("Erro ao carregar os dados.");
            }
        });
    </script>
</body>
</html>